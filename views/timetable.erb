<div class="container">
  <div class="row-fluid">
    <div class="page-header">
      <h1>タイムテーブル</h1>
    </div>

    <% ["1月13日（日）", "1月14日（月・祝）"].each_with_index do |day, i| %>
      <h2><%= day %></h2>

      <table class="timetable table table-condensed table-striped table-bordered">
        <tr>
          <th class="time"></th>
          <th class="content">メインホール</th>
          <th class="workshop">ワークショップ</th>
        </tr>
        <% @sessions[i].each do |timetable_session| %>
          <%= erb :_timetable_session, locals: { timetable_session: timetable_session } %>
        <% end %>
      </table>
    <% end %>
  </div>
</div>
